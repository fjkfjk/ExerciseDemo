<Window x:Class="SQLiteDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="423.318">
    <Grid Margin="10,0,2,0">
        <Button Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="10,288,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="110,288,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.424,0.464" Click="btnDelete_Click"/>
        <Button Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="210,288,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click"/>
        <Button Name="btnQuery" Content="Query" HorizontalAlignment="Left" Margin="310,288,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.751,0.721" Click="btnQuery_Click"/>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="10,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="383"/>
        <TextBlock Name="txtDisplay" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="221" Width="383"/>

    </Grid>
</Window>
