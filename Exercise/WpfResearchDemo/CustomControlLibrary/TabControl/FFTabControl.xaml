<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CustomControlLibrary">

    <LinearGradientBrush x:Key="TabItemBackgroundColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="WhiteSmoke"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TabItemMouseOverBackgroundColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="WhiteSmoke"/>
    </LinearGradientBrush>


    <Style TargetType="{x:Type local:FFTabControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FFTabControl}">
                    <Grid>
                        
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>